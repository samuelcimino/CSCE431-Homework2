-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id =>"ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", true, @ratings_checked.include?(rating)
  = submit_tag 'Refresh', :id =>"ratings_submit"


%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if params["title"] or session["title"]), :id =>("title_header")}= link_to"Movie Title", root_path(title:true)
      %th Rating
      %th{:class => ("hilite" if params["release"] or session["release"]), :id =>("release_date_header")}= link_to"Release Date", root_path(release:true)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

